<!DOCTYPE html>
<html>
<head>
  <title>Your Orders</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'myorders', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= form_tag store_path, class: 'locale' do %>
      <%= select_tag 'set_locale',
        options_for_select(LANGUAGES, I18n.locale.to_s),
        onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$('.locale input').hide()" %>
    <% end %>
    
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <ul>
        <li><a href="http://localhost:3000"><%= t('.home') %></a></li>
        <li><a href="http://localhost:3000/login"><%= t('.login') %></a></li>
      </ul>
      
      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'All Orders', orders_path %></li>
          <li><%= link_to 'All Users', users_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'My Orders', users_orders_path %></li>
          <li><%= link_to 'My Line Items', users_line_items_path %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <p>Your IP address is: <%= request.remote_ip %></p>
    <p>Hit Counter: <%= cookies[:counter] %></p>
  </div>
</body>
</html>
