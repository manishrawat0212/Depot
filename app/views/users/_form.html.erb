<div class="depot_form">

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter User Details</legend>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, size: 40, placeholder: 'Name'%>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, size: 40, placeholder: 'Email' %>
    </div>

    <%= f.fields_for :address do |address_form| %>
      <div class="field">
        <%= address_form.label :city %>
        <%= address_form.text_field :city, size: 40, placeholder: 'City' %>
      </div>
      <div class="field">
        <%= address_form.label :state %>
        <%= address_form.text_field :state, size: 40, placeholder: 'State' %>
      </div>
      <div class="field">
        <%= address_form.label :country %>
        <%= address_form.text_field :country, size: 40, placeholder: 'Country' %>
      </div>
      <div class="field">
        <%= address_form.label :pincode %>
        <%= address_form.text_field :pincode, size: 40, placeholder: 'Pincode' %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :language %>
      <%= f.select :language, options_for_select(["english", "hindi"], "english") %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, size: 40, placeholder: 'Password' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, size: 40, placeholder: 'Confirm Password' %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>

</div>